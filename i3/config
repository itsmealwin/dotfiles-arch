# exec_always xmodmap ~/.Xmodmap
exec_always setxkbmap -option caps:escape -option ctrl:swap_lalt_lctl
exec_always firefox
exec_always urxvt
exec_always caffeine
exec_always compton -cCGf -i 0.5

